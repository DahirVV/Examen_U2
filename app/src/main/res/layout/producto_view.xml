<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/producto_img"
        android:layout_width="72dp"
        android:layout_height="72dp"
        android:src="@drawable/burritos"/>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="3"
        android:orientation="vertical">
        <TextView
            android:id="@+id/producto_nombre"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Caramel Frap"/>
        <TextView
            android:id="@+id/producto_desc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Descripcion del producto"/>
        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="33dp">
            <TableRow>
                <Button
                    android:text="+"
                    android:backgroundTint="@color/btncolor"/>
                <TextView
                    android:text="0"
                    android:layout_width="100dp"
                    android:layout_height="20dp"
                    android:gravity="center"/>
                <Button
                    android:text="-"
                    android:backgroundTint="@color/btncolor"
                    android:layout_gravity="right"/>
            </TableRow>
        </TableLayout>

    </LinearLayout>
    <TextView
        android:id="@+id/producto_precio"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="70dp"
        android:layout_gravity="top"
        android:text="$5.00"/>

</LinearLayout>